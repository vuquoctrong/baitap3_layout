<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tblone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="2">

            <TableRow android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btntbred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color1"
                    android:textColor="#df1e04" />

                <Button
                    android:id="@+id/btntbyellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color2"
                    android:textColor="#ff0" />

                <Button
                    android:id="@+id/btntbblue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color3"
                    android:textColor="#0b4ce4" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnclear"
            android:text="Clear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/tvcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnclear"
            android:background="@color/colorPrimaryDark" />

    </RelativeLayout>


</LinearLayout>
